<% layout("/layouts/boilerplate") %>

<div class="row mt-3  ">
    <div class="col-6  offset-3">
        <form action="/signup"  method="POST" class="needs-validation" novalidate>
            <div  class="mb-3">
                <lable for="username" class="form-label" class="form-label">Username</lable>
                <input name="username"  type="text" class="form-control"  required>
                <div class="valid-feedback">Look good!</div>
            </div>
            <div  class="mb-3">
                <lable for="email" class="form-label" class="form-label">Email</lable>
                <input name="email"  type="email" class="form-control"  required>
            </div>
            <div  class="mb-3">
                <lable for="password" class="form-label" class="form-label">Password</lable>
                <input name="password"  type="password" class="form-control"  required>
            </div>
            <button class="btn btn-success" type=""submit>Signup</button>
        </form>
    </div>
</div>